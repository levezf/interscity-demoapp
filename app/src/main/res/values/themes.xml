<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InterSCityPlatformDemo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="background">@color/background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>

    <style name="TextAppearance.Base" parent="TextAppearance.AppCompat.Title" />

    <style name="TextAppearance.Card.Title" parent="TextAppearance.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
    </style>

    <style name="TextAppearance.Card.Normal" parent="TextAppearance.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:fontFamily">@font/urbanist_medium</item>
    </style>

    <style name="TextAppearance.Card.Value" parent="TextAppearance.Base">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
    </style>

    <style name="TextAppearance.Tooltip.Title" parent="TextAppearance.Base">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
    </style>

    <style name="TextAppearance.Tooltip.Normal" parent="TextAppearance.Base">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
    </style>

    <style name="IconSensor">
        <item name="tint">@color/green</item>
    </style>

</resources>